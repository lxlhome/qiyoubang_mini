/* pages/personal/collection.wxss */
.listView {
  padding: 18rpx 30rpx;
}
.listView .item {
  padding: 24rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0rpx 1rpx 4rpx 0rpx 
		rgba(96, 97, 112, 0.16);
}
.infoView {
  display: flex;
  justify-content: space-between;
}
.infoView .imgView {
  width: 190rpx;
  height: 190rpx;
  display: block;
  border-radius: 6rpx;
  overflow: hidden;
}
.infoView .imgView image {
  width: 100%;
  height: 100%;
}
.info_rv {
  flex: 1;
  margin-left: 26rpx;
}
.info_rv .title {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #1c1c28;
  display: flex;
  justify-content: space-between;
}
.info_rv .title .name {
  flex: 1;
}
.info_rv .title image {
  width: 32rpx;
	height: 30rpx;
}

.info_rv .time {
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #555770;
}
.info_rv .time {
  margin-top: 30rpx;
}
.info_rv .time image {
  width: 28rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 3rpx;
}
.info_rv .address {
  margin-top: 18rpx;
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #555770;
}
.info_rv .address image {
  width: 28rpx;
  height: 34rpx;
  margin-right: 10rpx;
  margin-top: 2rpx;
}
.info_rv .tt {
  flex: 1;
}